<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cart_layout"
    android:background="@drawable/cardview_bg"
    android:layout_margin="7pt"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15px">

            <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
                android:layout_gravity="right"
            android:src="@drawable/ic_baseline_cancel_24"
            android:background="@android:color/transparent"
            android:id="@+id/cart_rmv_btn"/>


        <ImageView
            android:id="@+id/cart_img"
            android:layout_width="237dp"
            android:layout_height="264dp"
            android:layout_gravity="center"
            android:layout_marginStart="15px"
            android:layout_marginTop="15px"
            android:layout_marginEnd="15px"
            android:layout_marginBottom="15px"
            android:src="@drawable/ic_menu_gallery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10px"
                android:text="lcd_with_touch_screen_for_apple_iphone_6s_64gb_rose_gold_by_maxbhi_com_47862.jpg"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/cart_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:padding="10px"
                android:text="$500"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10px"
                android:text="Quantity:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/cart_plus_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/add" />

            <TextView
                android:id="@+id/cart_qty_display_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="10px"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <ImageButton
                android:id="@+id/cart_subtract_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_horizontal_rule_24" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>